{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
		"timestamp": {
			"type": "string",
			"defaultValue": "[utcNow('u')]"
		},
        "location": {
            "type": "string",
            "defaultValue": "[resourceGroup().location]",
            "metadata": {
                "description": "Azure region"
            }
        },
        "cosmosDbAccountName": {
            "type": "string",
            "defaultValue": ""
        },
        "accountKind": {
            "type": "string",
            "defaultValue": "GlobalDocumentDB",
            "allowedValues": [
                "GlobalDocumentDB",
                "MongoDB"
            ]
        },
		"locationTuples": {
			"type": "string",
			"defaultValue": "",
			"metadata": {
				"displayName": "Account locations",
				"description": "Comma-delimited list of location:zone redundancy pairs. Example: eastus:Enabled,westus:Disabled,westus2:Enabled. Account location above should always be first in list, even if no other locations are specified. If single-region write, then failover priority will be set in order of locations in the string."
			}
		},
        "defaultConsistencyLevel": {
            "type": "string",
            "defaultValue": "Session",
            "allowedValues": [
                "Eventual",
                "ConsistentPrefix",
                "Session",
                "BoundedStaleness",
                "Strong"
            ]
        },
        "enableAutomaticFailover": {
            "type": "bool",
            "defaultValue": true,
            "metadata": {
                "displayName": "Automatic Failover",
                "description": "For single region write, whether writeable region should automatically fail over to next region if needed. Recommended: true."
            }
        },
        "enableMultipleWriteLocations": {
            "type": "bool",
            "defaultValue": false,
            "metadata": {
                "displayName": "Multiple Write Regions",
                "description": "Multiple Write Regions"
            }
        },
        "enableAnalyticalStorage": {
            "type": "bool",
            "defaultValue": false
        },
        "isVirtualNetworkFilterEnabled": {
            "type": "bool",
            "defaultValue": false
        }
	},
    "variables": {
        "locationTuples": "[split(parameters('locationTuples'), ',')]",
		"resourceTags": {
			"Timestamp": "[parameters('timestamp')]"
		},
        "apiVersionCosmosDb": "2021-03-01-preview"
    },
    "resources": [
        {
            "type": "Microsoft.DocumentDB/databaseAccounts",
            "apiVersion": "[variables('apiVersionCosmosDb')]",
            "name": "[parameters('cosmosDbAccountName')]",
            "location": "[parameters('location')]",
            "kind": "[parameters('accountKind')]",
			"tags": "[variables('resourceTags')]",
            "properties": {
                "databaseAccountOfferType": "Standard",
                "enableFreeTier": false,
                "enableAnalyticalStorage": "[parameters('enableAnalyticalStorage')]",
                "enableAutomaticFailover": "[parameters('enableAutomaticFailover')]",
                "enableMultipleWriteLocations": "[parameters('enableMultipleWriteLocations')]",
                "isVirtualNetworkFilterEnabled": "[parameters('isVirtualNetworkFilterEnabled')]",
                "virtualNetworkRules": [
                ],
                "consistencyPolicy": {
                    "defaultConsistencyLevel": "[parameters('defaultConsistencyLevel')]"
                },
                "copy": [
                    {
                        "name": "locations",
                        "count": "[length(variables('locationTuples'))]",
                        "input": {
                            "locationName": "[split(variables('locationTuples')[copyIndex('locations')], ':')[0]]",
                            "failoverPriority": "[if(parameters('enableMultipleWriteLocations'), 0, copyIndex('locations'))]",
                            "isZoneRedundant": "[split(variables('locationTuples')[copyIndex('locations')], ':')[1]]"
                        }
                    }
                ],
                "capabilities": [
                ]
            }
        }
	]
}