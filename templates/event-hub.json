{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
		"timestamp": {
			"type": "string",
			"defaultValue": "[utcNow('u')]"
		},
        "location": {
            "type": "string",
            "defaultValue": "[resourceGroup().location]",
            "metadata": {
                "description": "Azure region"
            }
        },
        "namespaceName": {
            "type": "string",
            "defaultValue": ""
        },
        "skuName": {
            "type": "string",
            "defaultValue": "Standard",
            "allowedValues": [
                "Basic",
                "Standard"
            ]
        },
        "capacity": {
            "type": "int",
            "minValue": 1,
            "maxValue": 20,
            "defaultValue": 1
        },
        "zoneRedundant": {
            "type": "bool",
            "defaultValue": true
        },
        "autoInflateEnabled": {
            "type": "bool",
            "defaultValue": true
        },
        "autoInflateMaxTUs": {
            "type": "int",
            "minValue": "[parameters('capacity')]",
            "maxValue": 20,
            "defaultValue": 20
        },
        "kafkaEnabled": {
            "type": "bool",
            "defaultValue": true
        }
	},
    "variables": {
		"resourceTags": {
			"Timestamp": "[parameters('timestamp')]"
		},
        "apiVersionEventHub": "2018-01-01-preview"
    },
    "resources": [
        {
            "type": "Microsoft.EventHub/namespaces",
            "apiVersion": "[variables('apiVersionEventHub')]",
            "name": "[parameters('namespaceName')]",
            "location": "[parameters('location')]",
			"tags": "[variables('resourceTags')]",
            "sku": {
                "name": "[parameters('skuName')]",
                "capacity": "[parameters('capacity')]"
            },
            "properties": {
                "zoneRedundant": "[parameters('zoneRedundant')]",
                "isAutoInflateEnabled": "[parameters('autoInflateEnabled')]",
                "maximumThroughputUnits": "[parameters('autoInflateMaxTUs')]",
                "kafkaEnabled": "[parameters('kafkaEnabled')]"
            }
        }
	]
}