{
	"$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
	"contentVersion": "1.0.0.1",
	"parameters": {
		"timestamp": {
			"type": "string",
			"defaultValue": "[utcNow('u')]"
		},
		"location": {
			"type": "string",
			"metadata": {
				"displayName": "Azure region",
				"description": "The Azure region within which to deploy. Examples: 'eastus2', 'centralus', etc. See https://azure.microsoft.com/regions/."
			}
		},
		"k8sversion": {
			"type": "string",
			"defaultValue": "1.20.5"
		},
		"clusterName": {
			"type": "string",
			"defaultValue": ""
		},
		"dnsPrefix": {
			"type": "string",
			"defaultValue": "",
			"metadata": {
				"description": "Optional DNS prefix to use with hosted Kubernetes API server FQDN."
			}
		},
		"managedIdentityType": {
			"type": "string",
			"defaultValue": "None",
			"allowedValues": [
				"SystemAssigned",
				"UserAssigned",
				"None"
			]
		},
		"identityResourceId": {
			"type": "string",
			"defaultValue": "",
			"metadata": {
				"displayName": "User-Assigned Identity Resource ID",
				"description": "If Identity Type set to UserAssigned, provide the UAI Resource ID here in ARM format, i.e. /subscriptions/{subscriptionId}/resourceGroups/{resourceGroupName}/providers/Microsoft.ManagedIdentity/userAssignedIdentities/{identityName}"
			}
		},
		"identityClientId": {
			"type": "string",
			"defaultValue": "",
			"metadata": {
				"displayName": "User-Assigned Identity Resource ID",
				"description": "If Identity Type set to UserAssigned, provide the UAI Resource ID here in ARM format, i.e. /subscriptions/{subscriptionId}/resourceGroups/{resourceGroupName}/providers/Microsoft.ManagedIdentity/userAssignedIdentities/{identityName}"
			}
		},
		"identityPrincipalId": {
			"type": "string",
			"defaultValue": "",
			"metadata": {
				"displayName": "User-Assigned Identity Resource ID",
				"description": "If Identity Type set to UserAssigned, provide the UAI Resource ID here in ARM format, i.e. /subscriptions/{subscriptionId}/resourceGroups/{resourceGroupName}/providers/Microsoft.ManagedIdentity/userAssignedIdentities/{identityName}"
			}
		},
		"osDiskSizeGB": {
			"type": "int",
			"defaultValue": 0,
			"minValue": 0,
			"maxValue": 1023,
			"metadata": {
				"description": "Disk size (in GB) to provision for each of the system pool nodes. This value ranges from 0 to 1023. Specifying 0 will apply the default disk size for that nodeVmSize."
			}
		},
		"nodeCount": {
			"type": "int",
			"defaultValue": 1,
			"minValue": 1,
			"maxValue": 100,
			"metadata": {
				"description": "The number of nodes for the system node pool."
			}
		},
		"nodeVmSize": {
			"type": "string",
			"defaultValue": "Standard_DS2_v2",
			"metadata": {
				"description": "The size of the system node pool VMs."
			}
		},
		"nodeAdminUsername": {
			"type": "string",
			"metadata": {
				"description": "Username for the system node pool VMs."
			}
		},
		"sshRSAPublicKey": {
			"type": "string",
			"metadata": {
				"description": "SSH public key in three-part format, ssh-rsa *** username"
			}
		},
		"osType": {
			"type": "string",
			"defaultValue": "Linux",
			"allowedValues": [
				"Linux"
			],
			"metadata": {
				"description": "The type of node operating system."
			}
		},
		"vnetSubnetResourceId": {
			"type": "string",
			"defaultValue": ""
		}
	},
	"variables": {
		"userAssignedIdentities": "[
			if
			(
				equals(toLower(parameters('managedIdentityType')), 'userassigned'),
				createObject
				(
					parameters('identityResourceId'),
					createObject(
						'clientId', parameters('identityClientId'),
						'principalId', parameters('identityPrincipalId')
					)
				),
				json('null')
			)
		]",
		"resourceTags": {
			"Timestamp": "[parameters('timestamp')]"
		},
		"apiVersionAks": "2021-03-01"
	},
	"resources": [
		{
			"type": "Microsoft.ContainerService/managedClusters",
			"apiVersion": "[variables('apiVersionAks')]",
			"name": "[parameters('clusterName')]",
			"location": "[parameters('location')]",
			"tags": "[variables('resourceTags')]",
			"properties": {
				"kubernetesVersion": "[parameters('k8sversion')]",
				"dnsPrefix": "[parameters('dnsPrefix')]",
				"agentPoolProfiles": [
					{
						"name": "systempool",
						"osDiskSizeGB": "[parameters('osDiskSizeGB')]",
						"count": "[parameters('nodeCount')]",
						"vmSize": "[parameters('nodeVmSize')]",
						"osType": "[parameters('osType')]",
						"storageProfile": "ManagedDisks",
						"mode": "System",
						"vnetSubnetID": "[parameters('vnetSubnetResourceId')]"
					}
				],
				"linuxProfile": {
					"adminUsername": "[parameters('nodeAdminUsername')]",
					"ssh": {
						"publicKeys": [
							{
								"keyData": "[parameters('sshRSAPublicKey')]"
							}
						]
					}
				},
				"networkProfile": {
					"networkPlugin": "kubenet",
					"serviceCidr": "10.1.0.0/16",
					"dnsServiceIP": "10.1.0.10",
					"podCidr": "10.241.0.0/16",
					"dockerBridgeCidr": "172.17.0.1/16"
				},
				"servicePrincipalProfile": {
					"clientId": "msi",
					"secret": ""
				},
				"identity": {
					"type": "[parameters('managedIdentityType')]",
					"userAssignedIdentities": "[variables('userAssignedIdentities')]"
				}
			}
		}
	],
	"outputs": {
		"controlPlaneFqdn": {
			"type": "string",
			"value": "[reference(parameters('clusterName')).fqdn]"
		}
	}
}