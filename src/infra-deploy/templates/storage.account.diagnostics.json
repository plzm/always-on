{
	"$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
	"contentVersion": "1.0.0.1",
	"parameters": {
		"storageAccountName": {
			"type": "string",
			"defaultValue": ""
		},
        "settingName": {
			"type": "string",
			"defaultValue": "diag"
		},
		"logAnalyticsWorkspaceResourceId": {
			"type": "string",
			"defaultValue": ""
		}
	},
	"variables": {
		"apiVersionDiagnostics": "2017-05-01-preview"
	},
	"resources": [
		{
			"name": "[concat(parameters('storageAccountName'), '/Microsoft.Insights/', parameters('settingName'))]",
			"type": "Microsoft.Storage/storageAccounts/providers/diagnosticsettings",
			"apiVersion": "[variables('apiVersionDiagnostics')]",
			"properties": {
				"workspaceId": "[parameters('logAnalyticsWorkspaceResourceId')]",
				"storageAccountId": "[resourceId('Microsoft.Storage/storageAccounts', parameters('storageAccountName'))]",
				"metrics": [
					{
						"category": "Transaction",
						"timeGrain": "PT1M",
						"enabled": true,
						"retentionPolicy": {
							"enabled": false,
							"days": 0
						}
					}
				]
			}
		},
		{
			"name": "[concat(parameters('storageAccountName'), '/default/Microsoft.Insights/', parameters('settingName'))]",
			"type": "Microsoft.Storage/storageAccounts/blobServices/providers/diagnosticsettings",
			"apiVersion": "[variables('apiVersionDiagnostics')]",
			"properties": {
				"workspaceId": "[parameters('logAnalyticsWorkspaceResourceId')]",
				"storageAccountId": "[resourceId('Microsoft.Storage/storageAccounts', parameters('storageAccountName'))]",
				"logs": [
					{
						"category": "StorageRead",
						"enabled": true,
						"retentionPolicy": {
							"enabled": true,
							"days": 0
						}
					},
					{
						"category": "StorageWrite",
						"enabled": true,
						"retentionPolicy": {
							"enabled": true,
							"days": 0
						}
					},
					{
						"category": "StorageDelete",
						"enabled": true,
						"retentionPolicy": {
							"enabled": true,
							"days": 0
						}
					}
				],
				"metrics": [
					{
						"category": "Transaction",
						"timeGrain": "PT1M",
						"enabled": true,
						"retentionPolicy": {
							"enabled": false,
							"days": 0
						}
					}
				]
			}
		}
	]
}