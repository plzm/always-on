{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "location": {
            "type": "string",
            "defaultValue": "[resourceGroup().location]",
            "metadata": {
                "description": "Azure region"
            }
        },
        "networkWatcherName": {
            "type": "string",
            "defaultValue": "[concat('NetworkWatcher_', parameters('location'))]",
            "metadata": {
                "description": "Name of the Network Watcher attached to your subscription. Format: NetworkWatcher_<region_name>"
            }
        },
        "flowLogName": {
            "type": "string",
            "defaultValue": ""
        },
        "nsgResourceId": {
            "type": "string",
            "metadata": {
                "description": "Resource ID of the target NSG"
            }
        },
        "storageAccountResourceId": {
            "type": "string",
            "defaultValue": ""
        },
        "logAnalyticsWorkspaceResourceId": {
            "type": "string",
            "defaultValue": ""
        },
        "retentionDays": {
            "type": "int",
            "defaultValue": 0,
            "minValue": 0,
            "maxValue": 365,
            "metadata": {
                "description": "Retention period in days. Default is zero which stands for permanent retention. Can be any Integer from 0 to 365"
            }
        },
        "flowLogsversion": {
            "type": "string",
            "defaultValue": "2",
            "allowedValues": [
                "1",
                "2"
            ],
            "metadata": {
                "description": "FlowLogs Version. Correct values are 1 or 2 (default)"
            }
        },
        "trafficAnalyticsInterval": {
            "type": "int",
            "defaultValue": 10,
            "allowedValues": [
                10,
                60
            ]
        }
    },
    "variables": {
        "apiVersionDeployments": "2021-04-01"
    },
    "resources": [
        {
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "[variables('apiVersionDeployments')]",
            "name": "DeployFlowLogs",
            "resourceGroup": "NetworkWatcherRG",
            "properties": {
                "mode": "Incremental",
                "expressionEvaluationOptions": {
                    "scope": "inner"
                },
                "template": {
                    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
                    "contentVersion": "1.0.0.0",
                    "parameters": {
                        "location": {
                            "type": "string"
                        },
                        "networkWatcherName": {
                            "type": "string"
                        },
                        "flowLogName": {
                            "type": "string"
                        },
                        "nsgResourceId": {
                            "type": "string"
                        },
                        "storageAccountResourceId": {
                            "type": "string"
                        },
                        "logAnalyticsWorkspaceResourceId": {
                            "type": "string"
                        },
                        "retentionDays": {
                            "type": "int"
                        },
                        "flowLogsversion": {
                            "type": "string"
                        },
                        "trafficAnalyticsInterval": {
                            "type": "string"
                        }
                    },
                    "variables": {
                        "apiVersionNet": "2020-11-01"
                    },
                    "resources": [
                        {
                            "type": "Microsoft.Network/networkWatchers/flowLogs",
                            "apiVersion": "[variables('apiVersionNet')]",
                            "name": "[concat(parameters('networkWatcherName'), '/', parameters('flowLogName'))]",
                            "location": "[parameters('location')]",
                            "properties": {
                                "targetResourceId": "[parameters('nsgResourceId')]",
                                "storageId": "[parameters('storageAccountResourceId')]",
                                "enabled": true,
                                "flowAnalyticsConfiguration": {
                                    "networkWatcherFlowAnalyticsConfiguration": {
                                        "enabled": true,
                                        "workspaceResourceId": "[parameters('logAnalyticsWorkspaceResourceId')]",
                                        "trafficAnalyticsInterval": "[parameters('trafficAnalyticsInterval')]"
                                    }
                                },
                                "retentionPolicy": {
                                    "days": "[parameters('retentionDays')]",
                                    "enabled": true
                                },
                                "format": {
                                    "type": "JSON",
                                    "version": "[parameters('flowLogsversion')]"
                                }
                            }
                        }
                    ]
                },
                "parameters": {
                    "location": {
                        "value": "[parameters('location')]"
                    },
                    "networkWatcherName": {
                        "value": "[parameters('networkWatcherName')]"
                    },
                    "flowLogName": {
                        "value": "[parameters('flowLogName')]"
                    },
                    "nsgResourceId": {
                        "value": "[parameters('nsgResourceId')]"
                    },
                    "logAnalyticsWorkspaceResourceId": {
                        "value": "[parameters('logAnalyticsWorkspaceResourceId')]"
                    },
                    "trafficAnalyticsInterval": {
                        "value": "[parameters('trafficAnalyticsInterval')]"
                    },
                    "retentionDays": {
                        "value": "[parameters('retentionDays')]"
                    },
                    "flowLogsversion": {
                        "value": "[parameters('flowLogsversion')]"
                    },
                    "storageAccountResourceId": {
                        "value": "[parameters('storageAccountResourceId')]"
                    }
                }
            }
        }
    ]
}